    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Apartment"
        android:textSize="24dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="247dp"
        android:layout_height="203dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/apartment_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="left"
        android:background="@color/light_blue">

        <!-- Line 1 - Title and Price -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:layout_weight="12"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold" />

        </LinearLayout>


        <!-- Line 2 - Full Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saint-Catherine St W"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_weight="6"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:layout_gravity="bottom"
                android:textSize="15dp"
                android:layout_weight="0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City of montreal"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_weight="2"
                android:lines="1"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:layout_gravity="bottom"
                android:textSize="15dp"
                android:layout_weight="0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewPostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H3H 2T2"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

        </LinearLayout>


        <!-- Line 3 - Apartment Size, Bedrooms, Bathrooms -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: "
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_weight="0"
                android:lines="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:src="@drawable/bedroom_icon"/>

            <TextView
                android:id="@+id/textViewBedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:src="@drawable/bathroom_icon"/>

            <TextView
                android:id="@+id/textViewBathrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor: "
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_weight="0"
                android:lines="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewStageFloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Line 4 - Apartment Parking, Heating, Rent Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="5dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:src="@drawable/parking_icon"/>

            <TextView
                android:id="@+id/textViewParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:src="@drawable/heating_icon"/>

            <TextView
                android:id="@+id/textViewHeating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:lines="1"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:src="@drawable/rent_type_icon"/>

            <TextView
                android:id="@+id/textViewRentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Rentals and Roommates"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="0"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>



    <!-- Line 1 - Descrition Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="left"
        android:background="@color/light_blue"
        android:layout_marginTop="20dp">

        <!-- Line 1 - Descrition Title -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>


        <!-- Line 2 - Description Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewViewApartmentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:lines="4"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>



    <!-- Section - Only Visible for Tenant -->
    <LinearLayout
        android:id="@+id/linearLayoutMessageField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_marginTop="20dp">

        <!-- Line 1 - Message and Button Send Message -->
        <!-- Line 1 - Message Text -->
        <EditText
            android:id="@+id/editTextViewApartmentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message"
            android:gravity="left"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:maxLength="500"
            android:lines="4"
            android:background="@color/light_blue"/>

<!--        <Button-->
<!--            android:id="@+id/btnSendMessage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Send Message"-->
<!--            android:textSize="20dp"-->
<!--            android:layout_gravity="right"-->
<!--            />-->

    </LinearLayout>

    <!-- Section - Only Visible for Owner or Tenant -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="left"
        android:padding="5dp">

        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:textSize="20dp"
            android:layout_gravity="right"
            />

        <Button
            android:id="@+id/btnViewApartmentViewMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Messages"
            android:textSize="20dp"
            android:layout_gravity="right"
            />

    </LinearLayout>

</LinearLayout>