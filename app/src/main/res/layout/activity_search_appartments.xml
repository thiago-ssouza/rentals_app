<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchApartments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <ImageButton
            android:id="@+id/imgBtnMyAcc"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/myaccount"
            android:onClick="goToMyAccount"
            />

    </LinearLayout>

    <Button
        android:id="@+id/filterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_light_background"
        android:textColor="@android:color/holo_purple"
        android:text="Filters"
        />

    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rooms"
            />

        <Spinner
            android:id="@+id/filterRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bathrooms"
            android:paddingTop="20dp"
            />

        <Spinner
            android:id="@+id/filterBathrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking?"
            android:paddingTop="20dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/filterParkingYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
            <RadioButton android:id="@+id/filterParkingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heating?"
            android:paddingTop="20dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/filterHeatingYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
            <RadioButton android:id="@+id/filterHeatingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            >

            <Button
                android:id="@+id/applyFiltersButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Apply"
                />
            <Button
                android:id="@+id/clearFiltersButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Clear"
                />
            <Button
                android:id="@+id/cancelFiltersButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/apartmentsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>